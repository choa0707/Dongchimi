<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/category_cate_2_backbtn"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic__back"
                    app:layout_constraintBottom_toBottomOf="@+id/category_cate_2_divider"
                    android:layout_width="25dp" android:layout_height="25dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:text="수강목록"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#008577"
                    android:text="수강한 클래스"
                    android:textSize="18sp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffcc00"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="강의한 클래스"/>

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/category_cate_2_s1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity">



                <View
                    android:id="@+id/category_cate_2_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/category_cate_2_search"
                    />



            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:id="@+id/category_cate_2_l1"
                app:layout_constraintTop_toBottomOf="@+id/category_cate_2_s1"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/category_cate_2_class1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/class1"
                    android:textSize="20sp"
                    />
                <ImageView
                    android:id="@+id/category_cate_2_iv1"
                    android:src="@drawable/i1"
                    android:layout_width="wrap_content"
                    android:layout_height="185dp"

                    android:layout_margin="8dp"
                    />
                <TextView
                    android:id="@+id/category_cate_2_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0원/회당"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="right"
                    />
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <Button
                        android:layout_gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="별점주기"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="리뷰작성"
                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/category_cate_2_l2"
                app:layout_constraintTop_toBottomOf="@+id/category_cate_2_l1"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/category_cate_2_class2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/class2"
                    android:textSize="20sp"
                    />

                <ImageView
                    android:id="@+id/category_cate_2_iv2"
                    android:src="@drawable/i1"
                    android:layout_width="wrap_content"
                    android:layout_height="185dp"
                    android:layout_margin="8dp"
                    />

                <TextView
                    android:id="@+id/category_cate_2_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000원/회당"
                    android:textSize="15dp"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    />
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <Button
                        android:layout_gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="별점주기"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="리뷰작성"
                        />

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>






</ScrollView>